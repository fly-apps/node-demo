{
  "compilerOptions": {
<% if (options.bun) { -%>
    "types": ["bun-types"],
<% } else { -%>
    "outDir": "./build",
<% } -%>
    "allowJs": true,
<% if (!options.esm || options.prisma) { -%>
    "module": "commonjs",
<% } -%>
<% if (options.drizzle) { -%>
    "skipLibCheck": true,
<% } -%>
    "target": "ES2018",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["<% if (!options.bun) { %>src/<% } %>**/*.ts"],
  "exclude": ["node_modules"]
}
  
