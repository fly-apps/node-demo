{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
<% if (!options.esm) { -%>
    "module": "commonjs",
<% } -%>
<% if (options.drizzle) { -%>
    "skipLibCheck": true,
<% } -%>
    "target": "ES2018",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
  
